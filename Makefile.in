ifeq (@COMPILE_R@,yes)
	@echo "Building R"
	$(call dobuild,@R_URL@,@R_GZ@,@EXTERNALS@)
endif
ifeq (@COMPILE_CMAKE@,yes)
	@echo "Couldn't find a valid cmake, building it"
	$(call dobuild,@CMAKE_URL@,@CMAKE_GZ@,@EXTERNALS@, cd Utilities/cmcurl  ; cp ../../../../exsrc/src/cmake/multi.c . ; cd ../..  ,  --parallel=@NCPUS@ )
endif
ifeq (@BUILDQT@,yes)
	@echo "Building Qt (extremely long, several hours, we recommend downloading the binaries from @QT_URL@ !)"
	$(call dobuild,@QT_URL@,@QT_GZ@,@EXTERNALS@,, @QTCONFIGOPT@ < ../../exsrc/src/o.txt )
endif
ifeq (@NUMPY@,yes)
	@echo "Building numpy"
	$(call dobuildpy,,@NUMPY_URL@,@NUMPY_GZ@,@prefix@,)
endif
ifeq (@BUILDVIS@,yes)
	@echo "Building SIP, "${PYVER}
	@echo "Python site-packages are located at: "`@PYTHON@ -c "import numpy ; print '/'.join(numpy.__path__[0].split('/')[:-1])"`
	$(call dobuild,@SIP_URL@,@SIP_GZ@,@EXTERNALS@, @PYTHON@ configure.py -b @prefix@/bin -d `@PYTHON@ -c "import numpy ; print '/'.join(numpy.__path__[0].split('/')[:-1])"` -e @prefix@/include -v @prefix@/share ;  )
	@echo "Building PyQt"
	$(call dobuild,@PyQt_URL@,@PyQt_GZ@,@EXTERNALS@, @PYTHON@ configure.py -b @prefix@/bin -d `@PYTHON@ -c "import numpy ; print '/'.join(numpy.__path__[0].split('/')[:-1])"` -v @prefix@/include -v @prefix@/share -q @QMAKE@ < ../../exsrc/src/yes.txt ;  )
endif
ifeq (@COMPILE_VTK@,yes)
	@echo "Building VTK (long)"
	mkdir build/VTK;mkdir build/VTK-build;cd build;../checked_get.sh @VTK_GZ@ @VTK_URL@/@VTK_GZ@ ; tar xzf ../sources/vtk-* ; cd VTK-build;cp ../../exsrc/CMakeCache.txt .;env @EXTRAENV@ CXXFLAGS="@CXXFLAGS@" CFLAGS="@CFLAGS@" CPPFLAGS="@CPPFLAGS@" LDFLAGS="@LDFLAGS@" PKG_CONFIG_PATH="@PKG_CONFIG_PATH@" LD_LIBRARY_PATH="@EXTERNALS@/lib:${LD_LIBRARY_PATH}" PATH="@EXTERNALS@/bin:${PATH}" cmake CMakeCache.txt;make;make install
endif
ifeq (@SETUPTOOLS@,yes)
	@echo "Building setuptools"
	$(call dobuildpy,,@SETUPTOOLS_URL@,@SETUPTOOLS_GZ@,@prefix@,)
endif
ifeq (@PyOpenGL@,yes)
	@echo "Building PyOpenGL"
	$(call dobuildpy,,@PyOpenGL_URL@,@PyOpenGL_GZ@,@prefix@,)
endif
ifeq (@Pmw@,yes)
	@echo "Building Pmw"
	$(call dobuildpy,cd src,@PMW_URL@,@PMW_GZ@,@prefix@,unset LDFLAGS;)
endif
ifeq (@COMPILE_UUID@,yes)
	@echo "Building UUID"
	$(call dobuild,@UUID_URL@,@UUID_GZ@,@EXTERNALS@)
endif
ifeq (@DOCMOR@,yes)
	@echo "Configuring CMOR2"
	@(cd Packages/cmor ; ./configure --prefix=@EXTERNALS@ --with-netcdf=@NC4LOC@ --with-udunits2=@UDUNITS2LOC@ --with-uuid=@UUIDLOC@ --with-zlib=@EXTERNALS@ --enable-fortran=no; cd ../..) >> @MAINDIR@/logs/cmor_config.LOG 
endif
	@echo "Building CDAT"
	@cp matplotlib.setup.cfg contrib/matplotlib/setup.cfg
	@XTRA_LD_F2PY@ LOCNCCONFIG="@LOCNCCONFIG@" @PYTHON@ install.py @PYTHON_INSTALL_OPTIONS@
	@echo "Done building CDAT"
ifeq (@ESG@,yes)
	@echo "Building ESG dependencies"
	@echo " ... building gui_support"
	@$(call dobuildpynotar,@prefix@,guisupport,cd Packages/gui_support)
# 	@echo " ... building psycopg2"
# 	@env PATH="@prefix@/bin:${PATH}:@PGCONFIG@" easy_install psycopg2 > logs/psycopg2.LOG
# 	@echo " ... building SQLAlchemy"
# 	@env PATH="@prefix@/bin:${PATH}:@PGCONFIG@" easy_install SQLAlchemy > logs/SQLAlchemy.LOG
# 	@echo " ... building lxml"
# 	@env PATH="@prefix@/bin:${PATH}:@PGCONFIG@" easy_install lxml > logs/lxml.LOG
# 	@echo "Checking out ESGCET repo"
#	(cd @EXTERNALS@ ; rm -rf esgcet ; svn co http://www-pcmdi.llnl.gov/svn/repository/Esgcet/trunk/esgcet esgcet ; cd esgcet ; @PYTHON@ setup.py --verbose develop  ) > logs/ESGCET.LOG
	pwd
endif
clean:
	rm -rf build
	./clean_script all
distclean: clean
	rm config.status
	rm config.log
	rm Makefile
	rm -rf sources
unscipy:
	rm -rf @prefix@/lib/python*/site-packages/scipy*
test:
	@PYTHON@ test_cdat.py -v3 -P > logs/tests.LOG
	@PYTHON@ test_cdat.py -v3 -C >> logs/tests.LOG
